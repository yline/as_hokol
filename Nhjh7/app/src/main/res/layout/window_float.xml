<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nhjh7.e.view.MultiScrollNumberLayout
        android:id="@+id/view_scroll_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.nhjh7.e.view.MultiScrollNumberLayout>

    // android:background="@android:color/white"

    <RelativeLayout
        android:layout_below="@+id/view_scroll_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="5"
            android:layout_toLeftOf="@+id/iv_float_rotate"
            android:layout_marginRight="80dp"
            android:text="134"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_float_rotate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/window_float"/>
    </RelativeLayout>
</RelativeLayout>
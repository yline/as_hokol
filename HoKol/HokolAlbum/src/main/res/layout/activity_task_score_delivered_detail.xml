<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 已参加的任务，商家给我的评价，目前仅仅一条 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_title_normal">

        <ImageView
            android:id="@+id/iv_task_score_delivered_detail_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/default_space_normal"
            android:paddingLeft="@dimen/default_space_large"
            android:paddingRight="@dimen/default_space_large"
            android:paddingTop="@dimen/default_space_normal"
            android:src="@drawable/global_back_red_arrows"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评论详情"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_large"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginRight="@dimen/default_space_large"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_space_small"
        android:paddingTop="@dimen/default_space_medium">

        <com.hokol.medium.viewcustom.CircleView
            android:id="@+id/circle_task_score_delivered_detail"
            android:layout_width="@dimen/default_space_super"
            android:layout_height="@dimen/default_space_super"
            android:src="@drawable/global_load_failed"/>

        <TextView
            android:id="@+id/circle_task_score_delivered_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="鹿宝宝lululu"
            android:textColor="@color/hokolBlackSmall"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <TextView
        android:id="@+id/circle_task_score_delivered_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:text="2017-05-28"
        android:textColor="@color/hokolGray"
        android:textSize="@dimen/default_text_size_small"/>

    <TextView
        android:id="@+id/circle_task_score_delivered_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_normal"
        android:text="鹿宝宝lululu"
        android:textColor="@color/hokolBlackSmall"
        android:textSize="@dimen/default_text_size_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:layout_marginLeft="@dimen/default_space_normal"
        android:layout_marginRight="@dimen/default_space_normal"
        android:layout_marginTop="@dimen/default_space_normal"
        android:background="@color/hokolGrayLight">
    </View>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_title_normal">

        <ImageView
            android:id="@+id/iv_task_assigned_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/default_space_normal"
            android:paddingLeft="@dimen/default_space_large"
            android:paddingRight="@dimen/default_space_large"
            android:paddingTop="@dimen/default_space_normal"
            android:src="@drawable/global_back_red_arrows"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的信用"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_large"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:background="@color/hokolGrayLight">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_space_large"
        android:paddingRight="@dimen/default_space_large">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_space_normal"
            android:paddingTop="@dimen/default_space_normal"
            android:text="资料完整度"
            android:textColor="@color/hokolBlackSmall"
            android:textSize="@dimen/default_text_size_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/widget_shape_radiuall_huge_solid_null_stroke_red"
            android:paddingBottom="@dimen/default_space_little"
            android:paddingLeft="@dimen/default_space_medium"
            android:paddingRight="@dimen/default_space_medium"
            android:paddingTop="@dimen/default_space_little"
            android:text="完善资料"
            android:textColor="@color/hokolRed"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_little"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progress_user_info_credit_title"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="@dimen/default_space_normal"
            android:layout_marginBottom="@dimen/default_space_normal"
            android:layout_marginTop="@dimen/default_space_normal"
            android:max="50"
            android:progress="25"
            android:progressDrawable="@drawable/widget_layer_radiusall_solid_graylight_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="50%"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/default_space_large"
        android:layout_marginLeft="@dimen/default_space_large"
        android:text="资料完整度越高，信用越高哦！"
        android:textColor="@color/hokolGrayDrak"
        android:textSize="@dimen/default_text_size_small"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_space_normal"
        android:paddingLeft="@dimen/default_space_large"
        android:paddingRight="@dimen/default_space_large"
        android:paddingTop="@dimen/default_space_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务动态评分"
            android:textColor="@color/hokolBlackSmall"
            android:textSize="@dimen/default_text_size_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(五分为满分)"
            android:textColor="@color/hokolRed"
            android:textSize="@dimen/default_text_size_normal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/default_space_little"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_little"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="外貌相符"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_small"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="@dimen/default_space_normal"
            android:layout_marginBottom="@dimen/default_space_normal"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_normal"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/widget_layer_radiusall_solid_graylight_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="5.0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_little"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="活动能力"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_small"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="@dimen/default_space_normal"
            android:layout_marginBottom="@dimen/default_space_normal"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_normal"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/widget_layer_radiusall_solid_graylight_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="5.0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_little"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="服务态度"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_small"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="@dimen/default_space_normal"
            android:layout_marginBottom="@dimen/default_space_normal"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_normal"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/widget_layer_radiusall_solid_graylight_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="5.0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:layout_marginTop="@dimen/default_space_normal"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_space_normal"
        android:paddingLeft="@dimen/default_space_large"
        android:paddingRight="@dimen/default_space_large"
        android:paddingTop="@dimen/default_space_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务动态评分"
            android:textColor="@color/hokolBlackSmall"
            android:textSize="@dimen/default_text_size_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(五分为满分)"
            android:textColor="@color/hokolRed"
            android:textSize="@dimen/default_text_size_normal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/default_space_little"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_little"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="外貌相符"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_small"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="@dimen/default_space_normal"
            android:layout_marginBottom="@dimen/default_space_normal"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_normal"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/widget_layer_radiusall_solid_graylight_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="5.0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_little"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="活动能力"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_small"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="@dimen/default_space_normal"
            android:layout_marginBottom="@dimen/default_space_normal"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_normal"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/widget_layer_radiusall_solid_graylight_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="5.0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_little"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="服务态度"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_small"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="@dimen/default_space_normal"
            android:layout_marginBottom="@dimen/default_space_normal"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_normal"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/widget_layer_radiusall_solid_graylight_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="5.0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:layout_marginTop="@dimen/default_space_normal"
        android:background="@color/hokolGrayLight">
    </View>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_title_normal">

        <ImageView
            android:id="@+id/iv_task_publish_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/default_space_normal"
            android:paddingLeft="@dimen/default_space_large_b"
            android:paddingRight="@dimen/default_space_large_b"
            android:paddingTop="@dimen/default_space_normal"
            android:src="@drawable/global_back_red_arrows"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="描述需求"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_large"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <FrameLayout
        android:id="@+id/drawer_task_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- tools:openDrawer="right" -->

        <!-- 内容 -->
        <include
            layout="@layout/activity_task_publish__content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </include>

        <!-- 右边 -->
        <RelativeLayout
            android:id="@+id/rl_task_publish_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="#4d000000"
            android:paddingLeft="100dp">
        </RelativeLayout>
        <!-- android:layout_gravity="right" -->
    </FrameLayout>
</LinearLayout>


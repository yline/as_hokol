<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_main_mine_dynamic_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_main_mine_dynamic_camera"
        android:layout_weight="1"
        android:padding="@dimen/default_space_normal"
        android:text="发布新的动态吧..."/>

    <ImageView
        android:id="@+id/iv_main_mine_dynamic_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/default_space_normal"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
</RelativeLayout>
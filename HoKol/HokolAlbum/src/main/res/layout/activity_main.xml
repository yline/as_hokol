<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--
        &lt;!&ndash; 对应MainTitleFragment &ndash;&gt;
        <fragment
            android:id="@+id/activity_main_title"
            android:name="com.hokol.fragment.MainTitleFragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>-->

    <!-- 对应MainTitleHelper -->
    <include
        android:id="@+id/include_main_title"
        layout="@layout/activity_main_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </include>

    <!-- 对应多个Fragment, -->
    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/include_main_tab"
        android:layout_below="@+id/include_main_title">
    </FrameLayout>

    <!-- 对应MainTabHelper -->
    <include
        android:id="@+id/include_main_tab"
        layout="@layout/activity_main_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">
    </include>
</RelativeLayout>
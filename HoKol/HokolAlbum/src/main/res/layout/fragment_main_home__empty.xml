<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_home_loading_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/super_swipe_main_home_home"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_home_loading_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/global_load_failed_normal"/>

        <TextView
            android:id="@+id/tv_home_loading_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_home_loading_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_space_normal"
            android:text="没有找到相关结果，减少筛选条件试一试~"
            android:textColor="@color/hokolGray"
            android:textSize="@dimen/default_text_size_large"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_main_mine_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/default_space_normal"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/tv_main_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_main_mine_avatar"
        android:layout_toEndOf="@+id/iv_main_mine_avatar"
        android:layout_toRightOf="@+id/iv_main_mine_avatar"
        android:maxLines="1"
        android:text="your pat"
        android:textColor="@android:color/black"
        android:textSize="@dimen/default_text_size_large"/>

    <TextView
        android:id="@+id/tv_main_mine_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_main_mine_name"
        android:layout_alignStart="@+id/tv_main_mine_name"
        android:layout_below="@+id/tv_main_mine_name"
        android:layout_marginTop="@dimen/default_space_little"
        android:layout_toLeftOf="@+id/tv_main_mine_arrow"
        android:maxLines="1"
        android:text="一行签名"/>

    <LinearLayout
        android:id="@+id/ll_main_mine_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_main_mine_avatar"
        android:layout_alignLeft="@+id/tv_main_mine_sign"
        android:layout_alignStart="@+id/tv_main_mine_sign"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_mine_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="=》"/>
</RelativeLayout>
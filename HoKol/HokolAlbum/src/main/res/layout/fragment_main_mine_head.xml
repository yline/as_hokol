<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_main_mine_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/ic_launcher"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_main_mine_name"
        android:layout_alignStart="@+id/tv_main_mine_name"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_main_mine_arrow"
        android:maxLines="1"
        android:text="一行签名"/>

    <TextView
        android:id="@+id/tv_main_mine_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_main_mine_avatar"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="标签"/>

    <TextView
        android:id="@+id/tv_main_mine_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="arrow"/>

    <TextView
        android:id="@+id/tv_main_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_main_mine_avatar"
        android:layout_toRightOf="@+id/iv_main_mine_avatar"
        android:text="your pat"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_main_home_filter_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_large"
        android:text="性别"
        android:textColor="@android:color/black"
        android:textSize="@dimen/default_text_size_normal"/>

    <com.hokol.medium.widget.labellayout.LabelFlowLayout
        android:id="@+id/label_flow_main_home_menu_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main_home_filter_sex"
        android:layout_marginLeft="@dimen/default_space_large">
    </com.hokol.medium.widget.labellayout.LabelFlowLayout>

    <TextView
        android:id="@+id/tv_main_home_filter_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_flow_main_home_menu_sex"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_large"
        android:text="推荐"
        android:textColor="@android:color/black"
        android:textSize="@dimen/default_text_size_normal"/>

    <com.hokol.medium.widget.labellayout.LabelFlowLayout
        android:id="@+id/label_flow_main_home_menu_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main_home_filter_recommend"
        android:layout_marginLeft="@dimen/default_space_large">
    </com.hokol.medium.widget.labellayout.LabelFlowLayout>

    <Button
        android:id="@+id/btn_main_home_menu_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_flow_main_home_menu_recommend"
        android:layout_marginTop="@dimen/default_space_large"
        android:background="@drawable/widget_bg_red_radius_normal"
        android:text="确定"
        android:textColor="@android:color/white"/>
</RelativeLayout>
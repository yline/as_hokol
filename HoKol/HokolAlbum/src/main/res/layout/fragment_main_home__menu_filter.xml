<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hokolGrayLittle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_main_home_filter_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="30dp"
        android:text="性别"
        android:textColor="@color/hokolGrayDrak"
        android:textSize="@dimen/default_text_size_normal"/>

    <com.yline.widget.label.LabelFlowLayout
        android:id="@+id/label_flow_main_home_menu_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main_home_filter_sex"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_normal">
    </com.yline.widget.label.LabelFlowLayout>

    <TextView
        android:id="@+id/tv_main_home_filter_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_flow_main_home_menu_sex"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="30dp"
        android:text="推荐"
        android:textColor="@color/hokolGrayDrak"
        android:textSize="@dimen/default_text_size_normal"/>

    <com.yline.widget.label.LabelFlowLayout
        android:id="@+id/label_flow_main_home_menu_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_main_home_filter_recommend"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginTop="@dimen/default_space_normal">
    </com.yline.widget.label.LabelFlowLayout>

    <Button
        android:id="@+id/btn_main_home_menu_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_flow_main_home_menu_recommend"
        android:layout_marginTop="40dp"
        android:background="@color/hokolRed"
        android:text="确定"
        android:textColor="@android:color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGray">
    </View>
</RelativeLayout>
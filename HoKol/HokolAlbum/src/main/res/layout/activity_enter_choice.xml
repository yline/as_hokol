<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_enter_choice_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_enter_choice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_enter_choice_logo"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/default_space_large"
            android:text="@string/app_name"
            android:textColor="@android:color/holo_red_light"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_enter_choice_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginRight="@dimen/default_space_large"
            android:background="@drawable/widget_bg_red_radius_normal"
            android:text="@string/enter_choice_register"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_enter_choice_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_enter_choice_register"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginRight="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_text_size_large"
            android:background="@drawable/widget_bg_white_radius_normal"
            android:text="@string/enter_choice_login"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/ll_enter_choice_divide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space_large"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_space_large"
                android:layout_toLeftOf="@+id/tv_enter_choice_divide"
                android:background="@android:color/black">
            </LinearLayout>

            <TextView
                android:id="@+id/tv_enter_choice_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="社交账号一键登录"
                android:textColor="@android:color/tertiary_text_dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_space_large"
                android:layout_toRightOf="@+id/tv_enter_choice_divide"
                android:background="@android:color/black">
            </LinearLayout>
        </RelativeLayout>

        <com.hokol.medium.viewcustom.CircleView
            android:id="@+id/circle_enter_choice_wechat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_enter_choice_divide"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/default_space_normal"
            android:src="@android:color/white"
            app:circle_border_color="@android:color/tertiary_text_dark"
            app:circle_border_width="1px">
        </com.hokol.medium.viewcustom.CircleView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_enter_choice_wechat"
            android:layout_centerHorizontal="true"
            android:text="微信"/>
    </RelativeLayout>
</LinearLayout>

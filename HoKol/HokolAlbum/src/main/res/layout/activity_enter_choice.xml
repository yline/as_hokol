<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_enter_choice_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/enter_choice_icon"/>

        <TextView
            android:id="@+id/tv_enter_choice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_enter_choice_logo"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/default_space_large"
            android:text="@string/app_name"
            android:textColor="@color/hokolRed"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_enter_choice_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginRight="@dimen/default_space_large"
            android:background="@drawable/enter_choice_register"
            android:text="注册"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_enter_choice_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_enter_choice_register"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginRight="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_normal"
            android:background="@drawable/enter_choice_login"
            android:text="登录"
            android:textColor="@color/hokolRed"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/ll_enter_choice_divide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_space_large"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_space_normal"
                android:layout_marginRight="@dimen/default_space_little"
                android:layout_toLeftOf="@+id/tv_enter_choice_divide"
                android:background="@color/hokolGrayLight">
            </LinearLayout>

            <TextView
                android:id="@+id/tv_enter_choice_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="社交账号一键登录"
                android:textColor="#808080"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_space_little"
                android:layout_marginRight="@dimen/default_space_normal"
                android:layout_toRightOf="@+id/tv_enter_choice_divide"
                android:background="@color/hokolGrayLight">
            </LinearLayout>
        </RelativeLayout>

        <com.hokol.medium.viewcustom.CircleView
            android:id="@+id/circle_enter_choice_wechat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_enter_choice_divide"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/default_space_large"
            android:src="@drawable/enter_choice_wechat">
        </com.hokol.medium.viewcustom.CircleView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_enter_choice_wechat"
            android:layout_centerHorizontal="true"
            android:text="微信"
            android:textColor="#808080"/>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main_news_recommend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fragment_main_news_item_margin_out">

    <ImageView
        android:id="@+id/iv_main_news_recommend"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_main_news_recommend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_main_news_recommend_origin"
        android:layout_marginBottom="@dimen/fragment_main_news_item_margin_in"
        android:layout_marginLeft="@dimen/fragment_main_news_item_margin_in"
        android:maxLines="2"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/tv_main_news_recommend_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_main_news_recommend"
        android:layout_marginBottom="@dimen/fragment_main_news_item_margin_in"
        android:layout_marginLeft="@dimen/fragment_main_news_item_margin_in"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/tv_main_news_recommend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_main_news_recommend"
        android:layout_marginBottom="@dimen/fragment_main_news_item_margin_in"
        android:layout_marginLeft="@dimen/fragment_main_news_item_margin_in"
        android:layout_toRightOf="@+id/tv_main_news_recommend_origin"
        android:text="@string/app_name"/>
</RelativeLayout>
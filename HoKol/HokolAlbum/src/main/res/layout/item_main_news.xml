<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/fragment_main_news_item_margin_out"
    android:layout_marginBottom="@dimen/fragment_main_news_item_margin_out"
    android:layout_marginRight="@dimen/fragment_main_news_item_margin_out"
    android:layout_marginTop="@dimen/fragment_main_news_item_margin_out">

    <ImageView
        android:id="@+id/iv_main_news"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_main_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_main_news_item_margin_in"
        android:layout_toRightOf="@+id/iv_main_news"
        android:maxLines="2"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/tv_main_news_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_main_news"
        android:layout_marginLeft="@dimen/fragment_main_news_item_margin_in"
        android:layout_marginRight="@dimen/fragment_main_news_item_margin_in"
        android:layout_toEndOf="@+id/iv_main_news"
        android:layout_toLeftOf="@+id/tv_main_news_time"
        android:layout_toRightOf="@+id/iv_main_news"
        android:layout_toStartOf="@+id/tv_main_news_time"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/tv_main_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_main_news"
        android:layout_alignParentRight="true"
        android:text="@string/app_name"/>

</RelativeLayout>
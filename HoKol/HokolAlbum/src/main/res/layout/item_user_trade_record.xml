<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space_medium"
        android:layout_marginTop="@dimen/default_space_medium"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_space_large">

        <ImageView
            android:id="@+id/iv_user_trade_record_icon"
            android:layout_width="@dimen/default_space_large_c"
            android:layout_height="@dimen/default_space_large_c"
            android:layout_centerVertical="true"
            android:src="@drawable/user_vip_identify_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:layout_toRightOf="@+id/iv_user_trade_record_icon"
            android:text="尊贵VIP会员"
            android:textColor="@color/hokolBlackSmall"
            android:textSize="@dimen/default_text_size_large"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/default_space_normal"
            android:text="￥1080红豆"
            android:textColor="@color/hokolRed"
            android:textSize="@dimen/default_text_size_normal"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space_normal"
        android:layout_marginTop="@dimen/default_space_large"
        android:paddingLeft="@dimen/default_space_large"
        android:text="购买内容：1个月会员"
        android:textColor="@color/hokolGrayDrak"
        android:textSize="@dimen/default_text_size_normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space_normal"
        android:paddingLeft="@dimen/default_space_large"
        android:text="交易时间：2017-02-18"
        android:textColor="@color/hokolGrayDrak"
        android:textSize="@dimen/default_text_size_normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space_large"
        android:paddingLeft="@dimen/default_space_large"
        android:text="会员有效时间：2017-02-18 到 2017-03-18"
        android:textColor="@color/hokolGrayDrak"
        android:textSize="@dimen/default_text_size_normal"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_title_normal">

        <ImageView
            android:id="@+id/iv_task_delivered_evaluate_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/default_space_normal"
            android:paddingLeft="@dimen/default_space_large"
            android:paddingRight="@dimen/default_space_large"
            android:paddingTop="@dimen/default_space_normal"
            android:src="@drawable/global_back_red_arrows"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评价"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_large"/>

        <TextView
            android:id="@+id/tv_task_delivered_evaluate_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/default_space_normal"
            android:paddingLeft="@dimen/default_space_normal"
            android:paddingRight="@dimen/default_space_large"
            android:paddingTop="@dimen/default_space_normal"
            android:text="发布"
            android:textColor="@color/hokolRed"
            android:textSize="@dimen/default_text_size_large"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:background="@color/hokolGrayLight">
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_space_large"
        android:paddingRight="@dimen/default_space_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="评分标准"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>

        <android.support.v7.widget.AppCompatRatingBar
            style="@style/Widget.ProgressBar.Evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:isIndicator="true"
            android:numStars="5"
            android:paddingBottom="@dimen/default_space_small"
            android:paddingTop="@dimen/default_space_small"
            android:rating="5"
            android:stepSize="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="非常好"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.hokol.medium.viewcustom.CircleView
            android:id="@+id/iv_task_delivered_evaluate_avatar"
            android:layout_width="@dimen/default_space_super"
            android:layout_height="@dimen/default_space_super"
            android:layout_marginBottom="@dimen/default_space_little"
            android:layout_marginLeft="@dimen/default_space_large"
            android:layout_marginTop="@dimen/default_space_little"/>

        <TextView
            android:id="@+id/tv_task_delivered_evaluate_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="鹿宝宝lulululu"
            android:textColor="@color/hokolBlackSmall"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_space_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_large"
            android:text="活动相符"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rating_task_evaluate_outlook"
            style="@style/Widget.ProgressBar.Evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/default_space_large_a"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/tv_task_evaluate_outlook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_large_a"
            android:text="非常好"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_large"
            android:text="交流态度"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rating_task_evaluate_attitude"
            style="@style/Widget.ProgressBar.Evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/default_space_large_a"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/tv_task_evaluate_attitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_large_a"
            android:text="非常好"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_space_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_large"
            android:text="诚信经营"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rating_task_evaluate_sincerity"
            style="@style/Widget.ProgressBar.Evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/default_space_large_a"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/tv_task_evaluate_sincerity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_large_a"
            android:text="非常好"
            android:textColor="@color/hokolGrayDrak"
            android:textSize="@dimen/default_text_size_medium"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <EditText
        android:id="@+id/et_delivered_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="top"
        android:hint="写一下，你对Ta的评价吧"
        android:lineSpacingExtra="@dimen/default_space_little"
        android:lines="5"
        android:paddingBottom="@dimen/default_space_small"
        android:paddingLeft="@dimen/default_space_large"
        android:paddingRight="@dimen/default_space_large"
        android:paddingTop="@dimen/default_space_medium"
        android:textColorHint="@color/hokolGray"
        android:textSize="@dimen/default_text_size_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_space_little"
        android:background="@color/hokolGrayLight">
    </View>
</LinearLayout>

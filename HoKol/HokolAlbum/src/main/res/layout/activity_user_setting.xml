<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user_setting_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_title_normal">

        <ImageView
            android:id="@+id/iv_user_setting_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/default_space_normal"
            android:paddingLeft="@dimen/default_space_large"
            android:paddingRight="@dimen/default_space_large"
            android:paddingTop="@dimen/default_space_normal"
            android:src="@drawable/global_back_red_arrows"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_large"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:id="@+id/ll_user_setting_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_text_size_normal"
        android:paddingLeft="@dimen/default_text_size_normal"
        android:paddingRight="@dimen/default_text_size_normal"
        android:paddingTop="@dimen/default_text_size_normal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账号与安全"
            android:textColor="@color/hokolBlackLight"
            android:textSize="@dimen/default_text_size_large"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:src="@drawable/global_forward_arrows_dark"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:id="@+id/ll_user_setting_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_text_size_normal"
        android:paddingLeft="@dimen/default_text_size_normal"
        android:paddingRight="@dimen/default_text_size_normal"
        android:paddingTop="@dimen/default_text_size_normal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="意见反馈"
            android:textColor="@color/hokolBlackLight"
            android:textSize="@dimen/default_text_size_large"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:src="@drawable/global_forward_arrows_dark"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <LinearLayout
        android:id="@+id/ll_user_setting_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_text_size_normal"
        android:paddingLeft="@dimen/default_text_size_normal"
        android:paddingRight="@dimen/default_text_size_normal"
        android:paddingTop="@dimen/default_text_size_normal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清理缓存"
            android:textColor="@color/hokolBlackLight"
            android:textSize="@dimen/default_text_size_large"/>

        <TextView
            android:id="@+id/tv_user_setting_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_space_normal"
            android:text="1023k"
            android:textColor="@color/hokolBlackLight"
            android:textSize="@dimen/default_text_size_large"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hokolGrayLight">
    </View>

    <Button
        android:id="@+id/btn_login_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_space_large"
        android:layout_marginRight="@dimen/default_space_large"
        android:layout_marginTop="30dp"
        android:background="@drawable/widget_shape_radiusall_solid_redhokol"
        android:paddingBottom="@dimen/default_space_normal"
        android:paddingTop="@dimen/default_space_normal"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_text_size_medium"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_main_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>

    <com.hokol.view.menu.DropDownMenu
        android:id="@+id/drop_menu_main_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:xMenuSelectedIcon="@drawable/global_drop_down_menu_selected"
        app:xMenuUnselectedIcon="@drawable/global_drop_down_menu_unselected">
    </com.hokol.view.menu.DropDownMenu>
</LinearLayout>
<resources>

    <!-- 默认有头部布局的风格 -->
    <style name="AppTheme.Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 状态栏高度 -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--子布局的,字体颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--自身的,返回键颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--配置父类,待被覆盖的-->
    <style name="AppTheme.Default.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- dialog -->
    <style name="AppDialog.Default" parent="@android:style/Theme.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--view label layout-->
    <declare-styleable name="WidgetLabelLayout">
        <attr name="label_max_select" format="integer"></attr>
        <attr name="label_min_select" format="integer"></attr>
        <attr name="label_max_count_each_line" format="integer"></attr>
        <attr name="label_gravity">
            <enum name="left" value="-1"/>
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <!-- ProgressBar -->
    <declare-styleable name="WidgetCircleProgressBar">
        <attr name="bar_text_size" format="dimension"/>
        <attr name="bar_text_color" format="color"/>
        <attr name="bar_text_progress" format="dimension"/>
        <attr name="bar_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <!-- CircleView -->
    <declare-styleable name="WidgetCircle">
        <attr name="circle_border_width" format="dimension"/>
        <attr name="circle_border_color" format="color"/>
    </declare-styleable>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--view label layout-->
    <declare-styleable name="WidgetLabelLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="max_count_each_line" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1"/>
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <!-- ProgressBar -->
    <declare-styleable name="WidgetCircleProgressBar">
        <attr name="bar_inner_radius" format="dimension"/>
        <attr name="bar_background_color" format="color"/>
        <attr name="bar_progress_color" format="color"/>
        <attr name="bar_progress_stoke_width" format="dimension"/>
        <attr name="bar_show_arrow" format="boolean"/>
        <attr name="bar_enable_circle_background" format="boolean"/>
        <attr name="bar_arrow_width" format="dimension"/>
        <attr name="bar_arrow_height" format="dimension"/>

        <attr name="bar_progress" format="integer"/>
        <attr name="bar_max" format="integer"/>

        <attr name="bar_progress_text_size" format="dimension"/>
        <attr name="bar_progress_text_color" format="color"/>

        <!--<attr name="bar_progress_text_offset" format="dimension"/>-->

        <attr name="bar_progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>
    <!-- CircleView -->
    <declare-styleable name="WidgetCircle">
        <attr name="circle_border_width" format="dimension"/>
        <attr name="circle_border_color" format="color"/>
    </declare-styleable>
</resources>
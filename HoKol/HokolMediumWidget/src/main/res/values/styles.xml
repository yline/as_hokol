<resources>
    <!-- dialog -->
    <style name="Widget.Dialog.Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 大小对应的 图片文件夹很有讲究, 系统放到的是 hdpi -->
    <style name="Widget.ProgressBar.Evaluate" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/widget_layer_list_star_rating</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>
</resources>

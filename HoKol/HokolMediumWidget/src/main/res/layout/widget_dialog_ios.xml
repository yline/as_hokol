<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/widget_ll_dialog_ios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/widget_dialog_ios_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/widget_tv_dialog_ios_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="标题"
                android:textColor="#ff000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/widget_tv_dialog_ios_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="消息内容"
                android:textColor="#ff666666"
                android:textSize="16dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ff999999"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/widget_btn_dialog_ios_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:padding="6dp"
                android:text="取消"
                android:textColor="#117aea"
                android:textSize="17dp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ff999999"></View>

            <Button
                android:id="@+id/widget_btn_dialog_ios_positive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:padding="6dp"
                android:text="确认"
                android:textColor="#117aea"
                android:textSize="17dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
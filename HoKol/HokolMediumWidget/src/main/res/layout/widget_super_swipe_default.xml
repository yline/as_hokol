<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hokol.medium.widget.progressbar.CircleProgressBar
        android:id="@+id/widget_progress_bar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        app:bar_arrow_height="5dp"
        app:bar_progress_stoke_width="3dp"
        app:bar_progress_text_visibility="invisible"
        app:bar_show_arrow="true">
    </com.hokol.medium.widget.progressbar.CircleProgressBar>
</RelativeLayout>